{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "buildCommand": "cd src && go mod download && go build -o main .",
    "nixpacksVersion": "1.29.0"
  },
  "deploy": {
    "startCommand": "cd src && ./main rest",
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10
  }
}
